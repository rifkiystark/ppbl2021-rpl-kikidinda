<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp">

        <View
            android:id="@+id/garis"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#f5f5f5"
            android:layout_marginStart="15dp"
            android:layout_alignTop="@id/leftContent"
            android:layout_alignBottom="@id/leftContent"
            android:layout_below="@+id/tvHowToUseNumber"/>
        <TextView
            android:id="@+id/tvHowToUseNumber"
            android:layout_width="32dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_circle"
            android:text="1"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:paddingBottom="2dp"/>

        <LinearLayout
            android:layout_toRightOf="@id/tvHowToUseNumber"
            android:id="@+id/leftContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingBottom="16dp">
            <TextView
                android:id="@+id/tvHowToUseTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:textColor="#323232"
                android:text="Ini"/>

            <TextView
                android:id="@+id/tvHowToUseDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="14sp"
                android:textColor="#323232"
                android:layout_marginTop="8dp"
                android:text="Ini deskrkispi" />

            <ImageView
                android:id="@+id/ivHowToUseImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:src="@drawable/ic_header_home" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>